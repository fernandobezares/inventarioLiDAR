print(estados);


var filtros = ee.Filter.and(
ee.Filter.eq('SP1',64)
//ee.Filter.inList('E1',[4,3]),
//ee.Filter.inList('CCAA_MFE50',[11,12,13,21])
) ;

var filtros2 = ee.Filter.and(
